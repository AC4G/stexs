{
  "name": "stexs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup-dev": "sudo ln -sf $(pwd)/stexs-dev/main.sh /usr/local/bin/stexs-dev",
    "build": "dotenv -- turbo run build",
    "build:main": "turbo run build:main",
    "build:module": "turbo run build:module",
    "lint": "turbo run lint",
    "dev": "dotenv -- turbo run dev",
    "tauri": "turbo run tauri --filter desktop",
    "clean": "turbo run clean",
    "clean:logs": "turbo run clean:logs",
    "type-check": "turbo run type-check",
    "test": "dotenv -- turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write '{apps,packages}/**/*.{ts,svelte}'",
    "preview": "turbo run preview"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@swc/cli": "^0.3.14",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.3.2",
    "turbo": "^1.13.4"
  },
  "dependencies": {
    "@turbo/gen": "^1.13.4",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.4"
  },
  "engines": {
    "npm": ">=10.1.0",
    "node": ">=20.8.0"
  },
  "packageManager": "pnpm@9.14.2"
}