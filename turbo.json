{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "test": {},
        "test:watch": {},
        "dev": { 
            "cache": false, 
            "persistent": true 
        },
        "clean": {
            "cache": false
        }
    }
}