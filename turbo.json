{
    "$schema": "https://turborepo.org/schema.json",
    "envMode": "loose",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "test": {},
        "test:watch": {},
        "test:db": {},
        "test:unit": {},
        "dev": {
            "cache": false, 
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
