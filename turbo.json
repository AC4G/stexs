{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["type-check", "^build"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "test": {
            "dotEnv": [".env"]
        },
        "test:watch": {},
        "dev": { "cache": false, "persistent": true }
    }
}