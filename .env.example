###########
# GLOBAL
###########

SERVICE_NAME=EXAMPLE

# jwt secret
ACCESS_TOKEN_SECRET=something-secure

# jwt payload
ISSUER=auth-api-domain
AUDIENCE=your-api-domain

# smtp credentials and configurations
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=admin
SMTP_PWD=pass123
SMTP_EMAIL=service@example.com

# totp configurations
TOTP_ALGORITHM=SHA256
TOTP_DIGITS=6
TOTP_PERIOD=30

# postgresql credentials
PG_URL=postgres://username:password@hostname:port/database

# url's
SIGN_IN_URL=http://localhost:3002/sign-in
RECOVERY_URL=http://localhost:3002/recovery

# centralized logger (Grafana Loki)
LOGGER_URL=http://localhost:3100

