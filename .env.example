# AUTH API
###########

# server settings
AUTHAPI_ENV=dev
AUTHAPI_SERVER_PORT=3001
AUTHAPI_TZ=UTC

# jwt secrets
AUTHAPI_REFRESH_TOKEN_SECRET=also-something-secure
AUTHAPI_SIGN_IN_CONFIRM_TOKEN_SECRET=something-secure-too

#jwt settings
AUTHAPI_JWT_EXPIRY_SIGN_IN_CONFIRM_LIMIT=600
AUTHAPI_JWT_EXPIRY_LIMIT=3600
