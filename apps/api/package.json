{
    "name": "api",
    "version": "1.0.0",
    "main": "./src/index.ts",
    "type": "commonjs",
    "scripts": {
        "build": "swc ./src ./env-config.ts --out-dir ./dist",
        "start": "node ./dist/src/index.js",
        "dev": "nodemon --watch ./src --ext ts --exec 'pnpm predev && pnpm build && pnpm start'",
        "predev": "wait-on ../../packages/utils-node/dist/src/index.js",
        "test:unit": "jest --verbose --silent=false --selectProjects unit-tests",
        "test:db": "jest --verbose --runInBand --silent=false --selectProjects db-tests",
        "test": "npm run test:unit && npm run test:db",
        "lint": "oxlint --fix --jest-plugin --max-warnings=5 $(find ./src -type f -name \"*.ts\") $(find ./tests -type f -name \"*.ts\")",
        "clean": "rm -rf dist",
        "clean:logs": "rm -f logs/*"
    },
    "dependencies": {
        "@jest/globals": "^30.0.4",
        "aws-sdk": "^2.1502.0",
        "bcrypt": "^6.0.0",
        "body-parser": "^2.2.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "eslint-plugin-array-func": "^5.0.2",
        "express": "^5.1.0",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "ip": "^2.0.1",
        "jsonwebtoken": "^9.0.2",
        "nodemon": "^3.1.10",
        "otpauth": "^9.4.0",
        "pg": "^8.16.3",
        "pulsar-client": "^1.14.0",
        "response-time": "^2.3.2",
        "ultimate-express": "^2.0.9",
        "utils-node": "workspace:*",
        "uuid": "^11.1.0",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.12.11",
        "@types/bcrypt": "^5.0.2",
        "@types/body-parser": "^1.19.6",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/express-paginate": "^1.0.3",
        "@types/express-serve-static-core": "^5.0.7",
        "@types/ip": "^1.1.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/nodemailer": "^6.4.9",
        "@types/pg": "^8.15.4",
        "@types/response-time": "^2.3.9",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^10.0.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-n": "^17.21.0",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-promise": "^7.2.1",
        "jest": "^30.0.4",
        "jest-date-mock": "^1.0.8",
        "oxlint": "^1.6.0",
        "supertest": "^7.1.3",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3"
    }
}
