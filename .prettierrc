{
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{ 
			"files": "*.svelte", 
			"options": { "parser": "svelte" } 
		},
		{
			"files": "*.sql",
			"options": {
					"tabWidth": 2,
					"useTabs": true,
					"language": "postgresql"
			}
	}
	]
}
