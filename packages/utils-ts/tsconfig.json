{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "isolatedModules": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
