{
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "compilerOptions": {
      "outDir": "./build",
      "module": "CommonJS",
      "target": "ES2019",
      "strict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
      "~/*": ["./app/*"]
      },
      "composite": true
  }
}
